model Patient {
  id            Int            @id @default(autoincrement())
  name          String
  gender        String
  age           Int
  phone         String         // âœ… à¹€à¸šà¸­à¸£à¹Œà¹‚à¸—à¸£
  lineUserId    String         @unique
  reports       Report[]
  notifications Notification[]
  createdAt     DateTime       @default(now())
}

model Report {
  id          Int       @id @default(autoincrement())
  patient     Patient   @relation(fields: [patientId], references: [id])
  patientId   Int
  bloodSugar  Int
  mealTime    String     // à¹€à¸Šà¹ˆà¸™ 'before' à¸«à¸£à¸·à¸­ 'after'
  systolic    Int
  diastolic   Int
  pulse       Int?
  recordedAt  DateTime
  createdAt   DateTime   @default(now())
  bloodSugarStatus String?  // à¹€à¸žà¸´à¹ˆà¸¡: "HIGH", "LOW", "NORMAL"
  systolicStatus   String?  // à¹€à¸žà¸´à¹ˆà¸¡: "HIGH", "LOW", "NORMAL"
}

model Admin {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  passwordHash String
  createdAt    DateTime  @default(now())
}

model Notification {
  id          Int       @id @default(autoincrement())
  type        String    // "high_risk", "new_patient", "high_sugar", "high_pressure"
  title       String
  message     String
  patientId   Int?
  patient     Patient?  @relation(fields: [patientId], references: [id])
  isRead      Boolean   @default(false)
  createdAt   DateTime  @default(now())
}